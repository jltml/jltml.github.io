---
pageable: false
paginate: false
per_page:
blog: blog
title: blog
---
<head>
  <%= stylesheet_link_tag "articles" %>
</head>

<h1><a href="./../blog">blog</a></h1>

<hr>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2>
    <% if article.tags.include? "Citation" %>
      <%= link_to 'Article: ' + article.title, article %> <span style='font-weight: normal;'>  •  <%= article.date.strftime('%b %e') + ', ' + article.date.strftime('%Y') %></span>
    <% else %>
      <%= link_to article.title, article %> <span style='font-weight: normal;'>  •  <%= article.date.strftime('%b %e') + ', ' + article.date.strftime('%Y') %></span>
    <% end %>
  </h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <!-- <%= article.body %> -->
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

<hr>

<aside class="blogFooter">
  <h3>Tags</h3>
  <p>
    <% blog.tags.each do |tag, articles| %>
      <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
    <% end %>
  </p>

  <h3>By Year</h3>
  <p>
    <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
      <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
    <% end %>
  </p>
</aside>
