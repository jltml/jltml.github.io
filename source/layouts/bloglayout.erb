<!doctype html>
<html>
  <head>
    <%= partial "/layouts/partials/head" %>
    <title>jacquesite // blog<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>

    <!-- Note: this is almost identical to the standard layout.erb. I tried nesting, but it broke the links -->
    <%= partial "/layouts/partials/banner" %>

    <div id="main" role="main">
      <h1><a href="../../../../../blog">blog</a></h1>
      <hr>
      <%= yield %>
    </div>

    <hr>

    <aside>
      <h3>Recent Articles</h3>
      <p>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
      </p>

      <h3>Tags</h3>
      <p>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
      </p>

      <h3>By Year</h3>
      <p>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
        <% end %>
      </p>
    </aside>
  </body>

  <script>
  <%= partial "/layouts/partials/menuscripts" %>
  </script>

</html>
